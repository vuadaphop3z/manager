@model Manager.Business.Models.SendSmsBindingModel

@{
    ViewBag.Title = "Send Sms Tool";
}

@Html.Partial("_Notifications")

@using (Html.BeginForm("TestSms", "Tools", FormMethod.Get, new { role = "form" }))
{
    @Html.HiddenFor(m => m.SendExec)

    <div class="widget-box">
        <div class="widget-header">
            <h4 class="widget-title">
                <i class="ace-icon fa fa-tint"></i>
                Send SMS Testing
            </h4>
        </div>
        <div class="widget-body">
            <div class="widget-main">
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.SMSPort)
                            <div class='form-group'>
                                @Html.TextBoxFor(m => m.SMSPort, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Mobile)
                            <div class='form-group'>
                                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Mobile)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Message)
                            <div class='form-group'>
                                @Html.TextBoxFor(m => m.Message, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Message)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-purple btn-sm">
                            Send SMS
                            <i class="ace-icon fa fa-send icon-on-right bigger-110"></i>
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

<div class="space"></div>






